{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mx-auto py-10 px-4">
				<h2 class="text-3xl font-semibold text-grey-dark text-center ">Votre identité</h2>
		{{ form_start(form, {'attr': {'id': 'student-form', 'class': 'mt-16 flex flex-col justify-between gap-x-8 w-full'}}) }}
		<div class="flex justify-between mb-8">
			<div class="w-full mr-4">
				<div class="flex flex-col items-center justify-between gap-y-8">
					<div class="flex flex-col justify-between w-1/2 gap-x-3">
						<div class="flex flex-row justify-between gap-x-3 mb-4">
							<div class="w-1/2">
								{{ form_row(form.firstName, {'attr': {'class': 'border flex flex-col input-apply w-full'}}) }}
							</div>
							<div class="w-1/2">

								{{ form_row(form.lastName, {'attr': {'class': 'border flex flex-col input-apply w-full'}}) }}
							</div>
						</div>
						<div class="mb-4">{{ form_row(form.email, {'attr': {'class': 'border flex flex-col input-apply w-full'}}) }}</div>
						<div class="mb-4">{{ form_row(form.password, {'attr': {'class': 'border flex flex-col input-apply w-full'}}) }}</div>
						<div class="mb-4">{{ form_row(form.education, {'attr': {'class': 'border flex flex-col input-apply w-full'}}) }}</div>
                        <button type="submit" class="btn-blue-dark w-fit border rounded px-4 py-2 mt-4 bg-blue-700 hover:bg-white border-blue-700 text-white hover:text-blue-700 transition cursor-pointer self-end">Créer mon compte</button>
					</div>
				</div>
			</div>
		</div>

		{{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
{% endblock %}
